<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Daftar Contact</h2>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">Nomer HP</th>
            <th scope="col">Detail</th>
          </tr>
        </thead>
        <tbody>
           <% contacts.forEach((contact, i) => { i++ %>
            <tr>
              <th scope="row"><%= i++ %> </th>
              <td><%= contact.nama %> </td>
              <td><%= contact.noHP %> </td>
              <td><a href="" class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a></td>
            </tr>
           <% }); %>  
        </tbody>
      </table>
    </div>
  </div>
</div>
