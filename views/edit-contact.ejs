<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">

          <% if (typeof errors != 'undefined') { %>
            <div class="alert alert-danger" role="alert">
              <ul>
                <% errors.forEach(error => { %>
                  <li>
                    <%= error.msg %> 
                  </li>
                <% }) %>
              </ul>
            </div>
          <% } %>

            <h2>Form Tambah Data Contact</h2>
            <form method="post" action="/contact/update">
              <input type="hidden" name="oldNama" value="<%= contact.oldNama || contact.nama %>">
                <div class="mb-3">
                  <label for="nama" class="form-label">Nama Contact</label>
                  <input type="text" class="form-control" id="nama" name="nama" required value="<%= contact.nama %>">
                </div>

                <div class="mb-3">
                  <label for="noHP" class="form-label">Nomor HP Contact</label>
                  <input type="text" class="form-control" id="noHP" name="noHP" required value="<%= contact.noHP %>">
                </div>
                
                <button type="submit" class="btn btn-primary">Ubah Data Contact</button>
              </form>
        </div>
    </div>
</div>